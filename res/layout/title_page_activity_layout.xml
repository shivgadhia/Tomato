<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <fragment android:name="com.shivgadhia.android.tomato.fragments.TitlePageBGCoverFragment"
              android:id="@+id/title_page_bg_cover_fragment"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
            />
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:layout_alignParentTop="true"
                  android:layout_centerVertical="true"
                  android:background="@drawable/contents_background_protection">
        <Space android:layout_height="match_parent" android:layout_width="0dp" android:layout_weight="1"/>

        <fragment android:name="com.shivgadhia.android.tomato.fragments.TitlePageFragment"
                  android:id="@+id/title_page_fragment"
                  android:layout_width="0dp"
                  android:layout_height="match_parent"
                  android:layout_weight="2"
                />

    </LinearLayout>
</RelativeLayout>